<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- App bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/litBlue"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Literarium"
            android:layout_weight="1"
            android:textColor="@color/litYellow"
            android:textSize="@dimen/appTitleDimension"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />

        <ImageButton
            android:src="@drawable/lens_icon"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:background="@color/litBlue"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/textPadding"
            android:text="Book" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/litGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/generalMargin"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="180dp"
                            android:src="@drawable/book_cover_template" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/generalMargin"
                        android:orientation="vertical">

                        <!-- Book title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPadding"
                            android:text="Book title"
                            android:textSize="@dimen/titleDimension"
                            android:textColor="@color/litBlue"/>

                        <!-- Author -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/textPadding"
                            android:text="By author name"
                            android:textSize="@dimen/subtitleDimension"
                            android:textColor="@color/litBlue"/>

                        <!-- Publish date -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/textPadding"
                                android:text="Publish date:"
                                android:textSize="@dimen/textDimension"
                                android:layout_weight="1"
                                android:textColor="@color/litBlue"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/textPadding"
                                android:text="DD/MM/YYYY"
                                android:textSize="@dimen/textDimension"
                                android:layout_weight="3"
                                android:textColor="@color/litBlue"/>

                        </LinearLayout>

                        <!-- Rating -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/textPadding"
                                android:text="Rating: "
                                android:textSize="@dimen/textDimension"
                                android:layout_weight="3"
                                android:textColor="@color/litBlue"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/textPadding"
                                android:text="0/0"
                                android:textSize="@dimen/textDimension"
                                android:layout_weight="1"
                                android:textColor="@color/litBlue"/>

                        </LinearLayout>

                        <!-- Share -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/litBlue">

                                <ImageButton
                                    android:scaleType="fitCenter"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/share_icon"
                                    android:layout_margin="@dimen/textPadding"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/litBlue">

                                <ImageButton
                                    android:scaleType="fitCenter"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/save_icon"
                                    android:layout_margin="@dimen/textPadding"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/litBlue">

                                <ImageButton
                                    android:scaleType="fitCenter"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/app_icon"
                                    android:layout_margin="@dimen/textPadding"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/litBlue">

                                <ImageButton
                                    android:scaleType="fitCenter"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/amazon_icon"
                                    android:layout_margin="@dimen/textPadding"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/biographyDimension"
                android:layout_margin="@dimen/generalMargin"
                android:background="@drawable/border">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:layout_margin="@dimen/innerMargin"
                    android:textSize="@dimen/textDimension"
                    android:textColorHint="@color/litBlue"
                    android:textColor="@color/litBlue"
                    />

            </LinearLayout>

            <!-- Series -->
            <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/litBlue">
            </ExpandableListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>